{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "target": "es2019",
    "lib": ["es2021"],
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitAny": true,
    "strict": true
  },
  "include": ["./src", "./node_modules/@malloydata/syntax-highlight/grammars"],
  "exclude": ["node_modules", ".vscode-test", ".vscode-test-web", "dist"]
}
