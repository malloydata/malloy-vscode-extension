{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "target": "es2019",
    "lib": ["es2020"],
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitAny": true
  },
  "include": ["./src", "src/malloy.tmGrammar.json"],
  "exclude": ["node_modules", ".vscode-test", ".vscode-test-web", "dist"]
}
