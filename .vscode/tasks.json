// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build-extension-dev",
      "label": "build-extension-task",
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "severity": "error",
        "pattern": [
          {
            "regexp": "\\[tsl\\] (ERROR|WARNING) in (.*)?\\((\\d+),(\\d+)\\)",
            "severity": 1,
            "file": 2,
            "line": 3,
            "column": 4
          },
          {
            "regexp": "\\s*TS(\\d+):\\s*(.*)$",
            "code": 1,
            "message": 2
          }
        ],
        "applyTo": "closedDocuments",
        "fileLocation": "absolute",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "Building extension"
          },
          "endsPattern": {
            "regexp": "Extension built (.*?successfully|with .*?errors)"
          }
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "typescript",
      "tsconfig": "tsconfig.compile-no-emit.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "tsc-compile-watch",
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      }
    }
  ]
}
